day 4 programs


1.is even

import java.io.*;
import java util.*;
class UserMainCode
{
 public int isEven(int input1){
 if(input1%2==0)
  {
  return 2;
  }
  else
  {
  return 1;
  }
  }
  }



2.is odd


import java.io.*;
import java.util.*;
class UserMainCode
{
  public int isOdd(int input1)
  {
    if(input1!=0)
    {
      return 2;
      }
      else
      {
      return 1;
      }
      }
      }




3. return last digit



import java.io.*;
import java util.*;
class UserMainCode
{
 public int lastDigitOf(int  input1)
 {
    int rem=0;
    rem=input1%10;
    return rem;
  }
}



4.return second last digit


import java.io.*;
import java util.*;
class UserMainCode
{
 public int secondLastDigit(int input1){
  if(input1>9)
    return(Math.abs((input1%100)/10);
  else if(input1<0)
    return(Math.abs((input1%100)/10);
    else
      return -1;
      }
      }


5.sum of last 2 digit of given nmber


import java.io.*;
import java.util.*;
class UserMainCode
{
  public int addLastDigits(int input1,int input2){
    int rem1=0,rem2=0,sum=0;
    rem1=input1%10;
    rem2=input2%10;
    sum=rem1+rem2;
    return sum;
   }
   }
